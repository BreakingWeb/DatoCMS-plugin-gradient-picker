{
  "name": "datocms-plugin-gradient-picker",
  "description": "A simple gradient picker plugin for creating smooth background gradients. Select a  starting color and adjust its opacity to generate a linear gradient that fades to  white. Perfect for hero sections and page backgrounds. Outputs clean CSS ready to  use in your components.",
  "homepage": "https://github.com/BreakingWeb/DatoCMS-plugin-gradient-picker",
  "private": false,
  "version": "0.1.0",
  "author": "breaking web <manu@breakingweb.com>",
  "type": "module",
  "keywords": [
    "datocms-plugin"
  ],
  "datoCmsPlugin": {
    "title": "Gradient Picker",
    "coverImage": "docs/cover-1200x800.png",
    "previewImage": "docs/preview.mp4",
    "entryPoint": "dist/index.html",
    "permissions": []
  },
  "files": [
    "dist",
    "docs"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "datocms-plugin-sdk": "*",
    "datocms-react-ui": "*",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "globals": "^15.9.0",
    "typescript": "^5.5.3",
    "vite": "^5.4.1"
  }
}
