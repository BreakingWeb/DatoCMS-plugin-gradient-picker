{
  "name": "@breaking/datocms-plugin-gradient-picker",
  "description": "A powerful gradient picker plugin for creating multi-color CSS gradients with full control over colors, stops, and angles. Perfect for creating beautiful backgrounds, hero sections, and visual effects. Outputs clean CSS gradient strings ready to use in your components.",
  "homepage": "https://github.com/BreakingWeb/DatoCMS-plugin-gradient-picker#readme",
  "private": false,
  "version": "1.0.2",
  "author": "breaking web <manu@breakingweb.com>",
  "type": "module",
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=10"
  },
  "keywords": [
    "datocms-plugin",
    "gradient",
    "color-picker",
    "css-gradient",
    "linear-gradient",
    "radial-gradient"
  ],
  "datoCmsPlugin": {
    "title": "Gradient Picker",
    "coverImage": "docs/cover-1200x800.png",
    "entryPoint": "dist/index.html",
    "permissions": []
  },
  "files": [
    "dist",
    "docs"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "datocms-plugin-sdk": "*",
    "datocms-react-ui": "*",
    "lodash": "^4.17.21",
    "react": "^18.3.1",
    "react-best-gradient-color-picker": "^3.0.14",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.20",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "globals": "^15.9.0",
    "typescript": "^5.5.3",
    "vite": "^5.4.1"
  },
  "main": "index.html",
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BreakingWeb/DatoCMS-plugin-gradient-picker.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BreakingWeb/DatoCMS-plugin-gradient-picker/issues"
  }
}
